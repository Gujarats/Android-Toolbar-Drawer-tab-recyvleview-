<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context="co.nusantech.autobridalapps.view.NewsActivity">



        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#FFFFFF"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin">

            <FrameLayout
                android:id="@+id/gbr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="100dp"
                    android:scaleType="fitXY"
                    android:src="#000000"
                    android:id="@+id/image1"/>

            </FrameLayout>

            <TextView
                android:id="@+id/judulnews"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/gbr"
                android:layout_marginTop="15dip"
                android:paddingLeft="15dp"
                android:layout_toRightOf="@+id/gbr"
                android:textColor="#6b4640"
                android:textSize="20sp"
                android:text="Messi Tertabrak becak"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="25 April 2015 | "
                android:id="@+id/tanggal"
                android:layout_below="@id/judulnews"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/gbr"
                android:textColor="#252525"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/jam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/judulnews"
                android:layout_toRightOf="@+id/tanggal"
                android:layout_marginTop="5dp"
                android:textColor="#252525"
                android:textStyle="bold"
                android:text="20:14"/>



        </RelativeLayout>


</RelativeLayout>